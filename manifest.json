{
  "manifest_version": 3,
  "name": "YouTube Auto-Pause",
  "version": "1.0",
  "description": "Automatically pauses YouTube videos when switching tabs",
  "permissions": [
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}





